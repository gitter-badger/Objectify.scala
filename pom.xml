<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.objectify</groupId>
	<artifactId>objectify-scala</artifactId>
	<packaging>jar</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>Scala Port of the Objectify Framework</name>
	<url>https://github.com/bitlove/objectify</url>

	<repositories>
		<repository>
			<id>oss.sonatype.org</id>
			<name>Scala-tools Maven2 Repository</name>
			<url>https://oss.sonatype.org/ </url>
		</repository>
	</repositories>

	<properties>
		<project.build.sourceEncoding>
			UTF-8
		</project.build.sourceEncoding>
		<project.reporting.outputEncoding>
			UTF-8
		</project.reporting.outputEncoding>
	</properties>

	<dependencies>
		<!-- Scala version is very important. Luckily the plugin warns you if you 
			don't specify: [WARNING] you don't define org.scala-lang:scala-library as 
			a dependency of the project -->
		<dependency>
			<groupId>org.scala-lang</groupId>
			<artifactId>scala-library</artifactId>
			<version>2.9.1</version>
		</dependency>
		<dependency>
			<groupId>org.reflections</groupId>
			<artifactId>reflections</artifactId>
			<version>0.9.5</version>
		</dependency>
		<dependency>
			<groupId>io.backchat.inflector</groupId>
			<artifactId>scala-inflector_2.9.1</artifactId>
			<version>1.3.3</version>
		</dependency>
		<dependency>
			<groupId>org.scalatest</groupId>
			<artifactId> scalatest_2.9.0</artifactId>
			<version>1.7.2</version>
		</dependency>
	</dependencies>

	<build>
		<!-- add the maven-scala-plugin to the toolchain -->
		<plugins>
			<plugin>
				<groupId>org.scala-tools</groupId>
				<artifactId>maven-scala-plugin</artifactId>
				<version>2.14.2</version>
			</plugin>
		</plugins>
	</build>

</project>  